@model Prog2bPOEPart2.Models.Document

@{
    ViewData["Title"] = "Create Document";
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color: black;">Create Document</h2>
    <p class="text-center">Please make sure that the document is either a PDF or a DOCX</p>

    <div class="card shadow-lg" style="border-radius: 0; border: none;">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ClaimId" class="control-label">Claim</label>
                    <select asp-for="ClaimId" class="form-control" asp-items="ViewBag.ClaimId"></select>
                </div>

                <div class="form-group">
                    <label for="file">Upload Document</label>
                    <input type="file" class="form-control" name="file" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" style="border-radius: 0;" />
                    <a asp-action="Index" class="btn btn-secondary" style="border-radius: 0;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>