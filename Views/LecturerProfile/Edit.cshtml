@model Prog2bPOEPart2.Models.LecturerProfileViewModel

@{
    ViewData["Title"] = "Edit Lecturer Profile";
}

<h1>Edit Lecturer Profile</h1>

<form asp-action="Edit" method="post">

    <div class="form-group">
        <label for="UserID">UserID</label>
        <input type="email" class="form-control" id="UserID" name="UserID" value="@Model.UserID" disabled />
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Role">Role</label>
        <input type="text" class="form-control" id="Role" name="Role" value="@Model.Role" disabled />
    </div>

    <input type="hidden" name="UserID" value="@Model.UserID" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Details", "LecturerProfile", new { id = Model.UserID })" class="btn btn-secondary">Cancel</a>
