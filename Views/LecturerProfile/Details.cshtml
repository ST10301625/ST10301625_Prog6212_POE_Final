@model Prog2bPOEPart2.Models.LecturerProfileViewModel

@{
    ViewData["Title"] = "Lecturer Details";
}

<div class="container">
    <h1 class="my-4">Lecturer Details</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Profile Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>UserID:</strong> @Model.UserID</p>
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Role:</strong> @Model.Role</p>
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Edit", "LecturerProfile", new { id = Model.UserID })" class="btn btn-primary">Edit Profile</a>
                <a href="@Url.Action("Index", "LecturerProfile")" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </div>
    </div>
</div>
