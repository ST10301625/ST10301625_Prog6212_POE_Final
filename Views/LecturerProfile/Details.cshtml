@model Prog2bPOEPart2.Models.LecturerProfileViewModel

@{
    ViewData["Title"] = "Lecturer Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Lecturer Details</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-primary mb-4">Profile Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-2"><strong>UserID:</strong> @Model.UserID</p>
                    <p class="mb-2"><strong>Name:</strong> @Model.Name</p>
                    <p class="mb-2"><strong>Role:</strong> @Model.Role</p>
                </div>
            </div>
            <div class="d-flex justify-content-start mt-4">
                <a href="@Url.Action("Edit", "LecturerProfile", new { id = Model.UserID })" class="btn btn-primary me-2">Edit Profile</a>
                <a href="@Url.Action("Index", "LecturerProfile")" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
